<h1>Declarations for <%= @discussion.name%> - <%= @user_profile.try(:city)%></h1>
<%= form_for @vote ,:url=>get_votes_discussion_votes_path(@discussion) do |f| %>
<table border="1">
        <tr>
                 <th>No</th>
                 <th>Declaration</th>
                 <th>For</th>
                 <th>Total</th>
                 <th>Against</th>
                 <th>Total</th>
                 <th>Author</th>
        </tr>
        <% @discussion.declarations.each do|dec|%>
    <tr>
    <td><%= dec.id%></td>         
        <td><%= dec.try(:name) %></td>
      
    <td><%=radio_button_tag(:vote, "1", false , :class => "color_input") %></td>
    <td><%#=Vote.getFavour(@discussion_vote)%></td>
    <td><%= radio_button_tag(:vote, "0",false ,:class => "color_input") %></td>
    <td><%#=Vote.getAgainst(@discussion_vote)%></td>
    <td><%#= f.submit "vote"%></td>
   
    </tr>
    <%end%>
        </table>

<%end%>

    <%= link_to "Save Vote"%></br>
 <td><%= link_to "Add Declaration",new_discussion_declaration_path(@discussion),:remote => true%></td></br>
 <div id="decla"></div>
<%= link_to "Back",comments_discussion_path(@user_discussion.discussion)%></br>
<%= link_to "logout" , destroy_user_session_path ,:method => :delete %>

