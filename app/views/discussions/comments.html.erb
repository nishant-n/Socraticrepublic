<% unless @discussion.nil?  %>
<h3> Discussion Members Table for <%= @user_profile.first_name %> </h3>
<table border='1'>
	<tr><th>First Name
	</th>
	<th>
		Location
	</th>
	<th> 
		Date Last Change
	</th>
	<th>
		Thesis
	</th></tr>
<% unless @user_discussions.blank? %>
	<% @user_discussions.each do |user| %> 
	<tr>
		<td>
         <%= link_to user.user_profile.first_name ,show_user_discussion_discussion_path(@discussion,{:user_id=>user.id})%>
		</td>
		<td>
			<%= user.user_profile.city %>
		</td>
		<td>
			<%= user.user_profile.updated_at %>
		</td>
		<td>
			<%= link_to 'view',show_user_discussion_path(@discussion,{:user_id=>user.id}) ,:remote => true, :id=>"#ajax_trigger_view" %>
		</td>
	</tr>
<% end %>	
<% else %>
<tr>
	<td colspan="4" align="center"> No one has joined</td>
</tr>
<% end %>

</table>
<%end%>

  <%= link_to 'Consensus Vote'%></br>
	<%= link_to 'Representive Vote'%></br>
	<%= link_to "logout" , destroy_user_session_path ,:method => :delete %>
	<br><br/>

	
	<div id="cid"></div>
 <%= form_for @user_discussion ,:url=>discussion_path(@discussion),:method=>:put do |f| %>
<p>
        Thesis Statment:<%=@user_discussion.updated_at.strftime('%m/%d/%y')%>


<p> <%= f.text_area :thesis , :size => "35x4"%></p>
<p>
        Arguments:<%=@user_discussion.updated_at.strftime('%m/%d/%y')%>
</p>

<p><%= f.text_area :argument , :size => "35x4"%></p>
<p>

		<%= f.submit  "Save Changes"%>


</p>

<% end %>


<script>

$(document).ready(
     function(){
          $("#ajax_trigger_view").bind("ajax:success",
                   function(evt, data, status, xhr){
                      //this assumes the action returns an HTML snippet
                        $("div#cid").html(data);
           }).bind("ajax:error", function(evt, data, status, xhr){
                    //do something with the error here
                    $("div#errors p").text(data);
           });
});

</script>
